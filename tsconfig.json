{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2020", "dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
      "**/*test.ts",
      "dist/**/*",
      "node_modules"
  ],
}
