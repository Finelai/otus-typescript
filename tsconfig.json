{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
      "**/*test.ts",
      "dist/**/*"
  ]
}
