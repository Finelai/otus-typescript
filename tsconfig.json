{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "lib": ["ES2020", "dom", "esnext"],
    "target": "ES2020",
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": "./",
    "types": ["node"],
    "rootDir": "./",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
      "**/*test.ts",
      "dist/**/*",
      "node_modules"
  ],
}
